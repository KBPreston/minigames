rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Leaderboards: one best entry per user per game.
    match /leaderboards/{gameId}/bestByUser/{uid} {
      allow read: if request.auth != null;

      // Internal playtest rules.
      // Only allow creating or updating your own doc.
      allow create, update: if request.auth != null
        && request.auth.uid == uid
        && request.resource.data.uid == request.auth.uid
        && request.resource.data.gameId == gameId
        && request.resource.data.playerName is string
        && request.resource.data.playerName.size() >= 3
        && request.resource.data.playerName.size() <= 16
        && request.resource.data.score is int
        && request.resource.data.score >= 0;

      allow delete: if false;
    }
  }
}
